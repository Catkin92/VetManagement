<h1>Edit information for <%= @owner.name %></h1>

<form action="/owners/<%= @owner.id %>" method="post">
  <label for="name-field">Name:</label>
    <input type="text" name="name" value="<%= @owner.name %>">
  <br>
  <br>
  <label for="address-field">Address:</label>
    <input type="text" name="address" value="<%= @owner.address %>">
  <br>
  <br>
  <label for="phone-number-field">Phone Number:</label>
    <input type="text" name="phone_number" value="<%= @owner.phone_number %>">
  <br>
  <br>
  <input type="submit" value="Update">
</form>
