<h1>Edit information for <%= @pet.name %></h1>

<form action="/pets/<%= @pet.id %>" method="post">
  <label for = "name-field">Name:</label>
  <input type="text" name="name" value="<%= @pet.name%>">
<br>
<br>
  <label for="dob-field">Date of Birth:</label>
  <input type="text" name="dob" placeholder="DD/MM/YY" size="9" value="<%= @pet.dob %>">
<br>
<br>
  <label for="type-field">Breed:</label>
  <input type="text" name="type" value="<%= @pet.type.capitalize %>">
<br>
<br>
  <label for="owner-selection">Owner:</label>
  <select name="owner_id">
    <% @owners.each do |owner| %>
      <% if owner.id == @pet.owner_id %>
          <option value= <%= owner.id %> selected><%= owner.name %></option>
          <% else %>
          <option value=<%= owner.id %>><%= owner.name %></option>
      <% end %>
    <% end %>
  </select>
<br>
<br>
 <label for="vet-selection">Vet:</label>
 <select name="vet_id">
   <% for vet in @vets %>
     <% if vet.id == @pet.vet_id %>
      <option value=<%= vet.id %> selected><%= vet.name %></option>
      <% else %>
      <option value="<%= vet.id %>"><%= vet.name %></option>
     <% end %>
   <% end %>
  </select>
<br>
<br>
  <input type="submit" value="Update">
</form>
