<h1><%= @pet.name %></h1>
<p><b>Date of Birth:</b> <%= @pet.dob %></p>
<p><b>Breed:</b> <%= @pet.type.capitalize %></p>
<p><b>Owner:</b><a href="/owners/<%= @pet.owner_id %>"> <%= @owner.name %> </a>
  <br>
  <br>
<h3>Notes:</h3>
<p><b><a class="link" href="/notes/<%= @pet.id %>/new">Add New Note</a></b></p>
  <% for note in @notes %>
    <p> <span style="color:grey"><%= note.note_date %></span>
     <%= note.note %>
    <b><a class="link" href="/notes/edit/<%= note.id %>">Edit Note</a></b>
    <b><a class="link" href="/notes/delete/<%= note.id %>">Delete Note</a></b></p>
     <hr>
  <% end %>
<br>
<br>
<p><b><a class="link" href="/pets/<%= @pet.id %>/edit">Edit Information</a><a class="link" href="/pets/delete/<%= @pet.id %>">Delete Pet</a></b></p>
